<h1 class="m-4">My tasks</h1>
<div class="m-4">
  <ul style="list-style:none">
    <% @tasks.each do |task| %>
      <li ><input type="checkbox"> <%= link_to task.title, task_path(task.id) %></li>
      <%= link_to "❌", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <% end %>
  </ul>
  <button type="button" class="btn btn-warning"><%= link_to "Add a new task", new_task_path %></button>
</div>
