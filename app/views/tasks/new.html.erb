<h1 class="m-4">New task</h1>
<div class="m-4">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>
<div>

<button type="button" class="btn btn-warning mt-4"><%= link_to "Back to list", tasks_path %></button>
